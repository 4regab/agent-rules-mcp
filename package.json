{
  "name": "agent-rules-mcp",
  "version": "1.0.5",
  "description": "Model Context Protocol server that provides development rules and best practices from local markdown files",
  "main": "dist/index.js",
  "bin": {
    "agent-rules-mcp": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "npm run clean && tsc",
    "build:prod": "npm run clean && tsc --project tsconfig.build.json",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "clean": "rimraf dist",
    "prepack": "npm run build:prod",
    "lint": "echo 'Linting not configured yet'",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build:prod"
  },
  "keywords": ["mcp", "model-context-protocol", "rules", "development", "best-practices"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "vitest": "^1.0.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "README-mcp.md",
    "CONTRIBUTING.md",
    "DEPLOYMENT.md",
    "docs/**/*.md"
  ]
}